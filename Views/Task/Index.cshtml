@model IEnumerable<Google_To_Do.Models.zadanie>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">

            <h2 class="text-primary">Lista zadań</h2>

        </div>
        <div class="col-6 text-right">
            <a asp-controller="Task" asp-action="Create" class="btn btn-primary">
                Utworz zadanie
            </a>

        </div>

    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">

            <thead>

                <tr>

                    <th>
                        Zadanie
                    </th>
                    <th>
                        Kategoria
                    </th>
                    <th>
                        Opis
                    </th>
                    <th>
                        Piorytet
                    </th>
                    <th>
                        Data ważności
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)

                {
                <tr>
                    <td width="50%">@obj.TaskName</td>
                    <td width="70%">@obj.Category</td>

                    <td width="70%">@obj.description</td>
                    <td width="50%">@obj.priority</td>
                    <td width="55%">@obj.StartDate</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Task" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit">Edytuj</i>
                            </a>
                            <a asp-controller="Task" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="far fa-trash-alt">Usuń</i>
                            </a>
                        </div>
                    </td>
                </tr>

                    
                }
            </tbody>
        </table>

    }
    else
    {

        <p> Kategoria nie istnieje.</p>

    }
</div>